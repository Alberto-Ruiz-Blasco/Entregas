<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.calculator.HelloController"
          alignment="center" hgap="10" vgap="10" styleClass="root">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextField fx:id="display" editable="false" GridPane.columnSpan="4" />
    
    <Button text="7" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="8" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="9" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <Button text="/" onAction="#handleOperation" styleClass="operation" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

    <Button text="4" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="5" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="6" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Button text="*" onAction="#handleOperation" styleClass="operation" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

    <Button text="1" onAction="#handleNumber" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button text="2" onAction="#handleNumber" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button text="3" onAction="#handleNumber" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
    <Button text="-" onAction="#handleOperation" styleClass="operation" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

    <Button text="C" onAction="#handleClear" styleClass="clear" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="0" onAction="#handleNumber" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="=" onAction="#handleEqual" styleClass="operation" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
    <Button text="+" onAction="#handleOperation" styleClass="operation" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
</GridPane>
